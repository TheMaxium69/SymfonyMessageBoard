{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container text-white d-block">
        <h1>CONNEXION</h1>
        <form class="form-group" method="POST">
            <div class="mb-3">
                <label for="_username">Utilisateur</label>
                <input name="_username" id="username" class="form-control" type="text">
            </div>
            <div class="mb-3">
                <label for="_password">Mot de passe</label>
                <input name="_password" class="form-control" type="password">
            </div>
            <button type="submit" class="btn btn-success">Se connecter</button>

        </form>
    </div>
{% endblock %}